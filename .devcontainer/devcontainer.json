{
  "name": "Node.js",
  "dockerComposeFile": ["../compose.dev.yaml", "./compose.extend.yaml"],
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "zixuanchen.vitest-explorer",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "onCreateCommand": "yarn install",
  "postCreateCommand": "yarn be prisma migrate dev && yarn be prepare:local",
  "postStartCommand": "yarn dev",
  "forwardPorts": [5173, 5174],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (+ backend proxy)"
    },
    "5174": {
      "label": "Backend"
    }
  },
  "remoteUser": "node"
}
