{
  "name": "Node.js",
  "dockerComposeFile": ["../compose.dev.yml", "./compose.extend.yml"],
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "oxc.oxc-vscode",
        "esbenp.prettier-vscode",
        "vitest.explorer",
        "bradlc.vscode-tailwindcss",
        "prisma.prisma",
        "ms-playwright.playwright",
        "renesaarsoo.sql-formatter-vsc",
        "tekumara.typos-vscode"
      ]
    }
  },
  "onCreateCommand": "pnpm install",
  "postCreateCommand": {
    "migrate": "pnpm be prisma migrate dev",
    "prepare": "pnpm be prepare:local"
  },
  "postAttachCommand": "pnpm dev",
  "forwardPorts": [5173, 5174],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (+ backend proxy)"
    },
    "5174": {
      "label": "Backend"
    },
    "6006": {
      "label": "Storybook"
    }
  },
  "remoteUser": "node"
}
