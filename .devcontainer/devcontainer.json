{
  "name": "Node.js",
  "dockerComposeFile": ["../compose.dev.yaml", "./compose.extend.yaml"],
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "zixuanchen.vitest-explorer",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "ms-playwright.playwright",
        "ReneSaarsoo.sql-formatter-vsc",
        "tekumara.typos-vscode"
      ]
    }
  },
  "onCreateCommand": "yarn install",
  "postCreateCommand": {
    "migrate": "yarn be prisma migrate dev",
    "prepare": "yarn be prepare:local"
  },
  "postAttachCommand": "yarn dev",
  "forwardPorts": [5173, 5174],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (+ backend proxy)"
    },
    "5174": {
      "label": "Backend"
    },
    "6006": {
      "label": "Storybook"
    }
  },
  "remoteUser": "node"
}
