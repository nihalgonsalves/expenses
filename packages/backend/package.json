{
  "name": "@nihalgonsalves/expenses-backend",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "postinstall": "test -n \"$SKIP_POSTINSTALL_GENERATE\" || yarn db:generate",
    "dev": "run-p 'build --watch' 'start' 'db:generate --watch'",
    "start": "mkdir -p ./dist/ && touch ./dist/app.js && touch .env && NODE_ENV=production node --enable-source-maps --env-file=.env --watch ./dist/app.js",
    "build": "node bin/bundle.js",
    "test": "vitest",
    "db:migrate": "prisma migrate dev --name",
    "db:sql-lint": "yarn dlx squawk-cli",
    "db:push": "prisma db push --skip-generate",
    "db:generate": "prisma generate",
    "prepare:e2e": "node bin/prepare-ci-e2e.js",
    "prepare:local": "node bin/prepare-local-env.js",
    "prepare:demo": "tsx bin/demo.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.5.3",
    "@bull-board/hono": "^6.5.3",
    "@hono/node-server": "^1.13.7",
    "@hono/trpc-server": "^0.3.3",
    "@nihalgonsalves/expenses-shared": "*",
    "@prisma/client": "*",
    "@sentry/node": "^8.42.0",
    "@trpc/server": "^11.0.0-rc.648",
    "bcrypt": "*",
    "bullmq": "^5.31.0",
    "cookie": "^1.0.2",
    "hono": "^4.6.12",
    "ioredis": "^5.4.1",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9",
    "nodemailer": "^6.9.16",
    "rate-limiter-flexible": "^5.0.4",
    "rrule": "^2.8.1",
    "temporal-polyfill": "^0.2.5",
    "ua-parser-js": "^2.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@sentry/esbuild-plugin": "^2.22.6",
    "@testcontainers/postgresql": "^10.15.0",
    "@testcontainers/redis": "^10.15.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@trpc/client": "^11.0.0-rc.648",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6",
    "@types/pem": "^1.14.4",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.24.0",
    "fetch-cookie": "^3.0.1",
    "npm-run-all2": "^7.0.1",
    "pem": "^1.14.8",
    "prisma": "*",
    "testcontainers": "^10.15.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "resolutions": {
    "@bull-board/ui": "6.5.3",
    "@prisma/client": "5.22.0",
    "prisma": "5.22.0",
    "bcrypt": "5.1.1"
  }
