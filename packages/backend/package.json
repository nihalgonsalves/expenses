{
  "name": "@nihalgonsalves/expenses-backend",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "postinstall": "test -n \"$SKIP_POSTINSTALL_GENERATE\" || yarn db:generate",
    "dev": "run-p 'build --watch' 'start' 'db:generate --watch'",
    "start": "mkdir -p ./dist/ && touch ./dist/app.js && touch .env && NODE_ENV=production node --enable-source-maps --env-file=.env --watch ./dist/app.js",
    "build": "node bin/bundle.js",
    "test": "vitest",
    "db:migrate": "prisma migrate dev --name",
    "db:sql-lint": "yarn dlx squawk-cli",
    "db:push": "prisma db push --skip-generate",
    "db:generate": "prisma generate",
    "prepare:e2e": "node bin/prepare-ci-e2e.js",
    "prepare:local": "node bin/prepare-local-env.js",
    "prepare:demo": "node --experimental-strip-types bin/demo.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.7.7",
    "@bull-board/hono": "^6.7.7",
    "@hono/node-server": "^1.13.8",
    "@hono/trpc-server": "^0.3.4",
    "@nihalgonsalves/expenses-shared": "*",
    "@prisma/client": "*",
    "@sentry/node": "^9.2.0",
    "@sentry/profiling-node": "^9.2.0",
    "@trpc/server": "^11.0.0-rc.781",
    "bcrypt": "*",
    "bullmq": "^5.41.2",
    "cookie": "^1.0.2",
    "hono": "^4.7.1",
    "ioredis": "^5.5.0",
    "jose": "^5.10.0",
    "nanoid": "^5.1.0",
    "nodemailer": "^6.10.0",
    "rate-limiter-flexible": "^5.0.5",
    "rrule": "^2.8.1",
    "temporal-polyfill": "^0.2.5",
    "ua-parser-js": "^2.0.2",
    "web-push": "^3.6.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.0",
    "@sentry/esbuild-plugin": "^3.2.1",
    "@testcontainers/postgresql": "^10.18.0",
    "@testcontainers/redis": "^10.18.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@trpc/client": "^11.0.0-rc.781",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6",
    "@types/pem": "^1.14.4",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^3.0.5",
    "esbuild": "^0.25.0",
    "fetch-cookie": "^3.1.0",
    "npm-run-all2": "^7.0.2",
    "pem": "^1.15.1",
    "prisma": "*",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.2"
  },
  "resolutions": {
    "@bull-board/ui": "6.6.2",
    "@prisma/client": "6.3.1",
    "prisma": "6.3.1",
    "bcrypt": "5.1.1"
  }
}
