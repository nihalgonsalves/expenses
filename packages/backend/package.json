{
  "name": "@nihalgonsalves/expenses-backend",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "postinstall": "test -n \"$SKIP_POSTINSTALL_GENERATE\" || yarn db:generate",
    "dev": "run-p 'build --watch' 'start' 'db:generate --watch'",
    "start": "mkdir -p ./dist/ && touch ./dist/app.js && touch .env && NODE_ENV=production node --enable-source-maps --env-file=.env --watch ./dist/app.js",
    "build": "node bin/bundle.mjs",
    "test": "vitest",
    "db:migrate": "prisma migrate dev --name",
    "db:sql-lint": "yarn dlx squawk-cli",
    "db:push": "prisma db push --skip-generate",
    "db:generate": "prisma generate",
    "prepare:e2e": "node bin/prepare-ci-e2e.mjs",
    "prepare:local": "node bin/prepare-local-env.mjs"
  },
  "dependencies": {
    "@bull-board/api": "^5.21.1",
    "@bull-board/hono": "^5.21.1",
    "@hono/node-server": "^1.12.0",
    "@hono/trpc-server": "^0.3.2",
    "@nihalgonsalves/expenses-shared": "*",
    "@prisma/client": "*",
    "@sentry/node": "^8.19.0",
    "@trpc/server": "^11.0.0-rc.467",
    "bcrypt": "*",
    "bullmq": "^5.10.3",
    "cookie": "^0.6.0",
    "hono": "^4.5.1",
    "ioredis": "^5.4.1",
    "jose": "^5.6.3",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.14",
    "rrule": "^2.8.1",
    "temporal-polyfill": "^0.2.5",
    "ua-parser-js": "^1.0.38",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@sentry/esbuild-plugin": "^2.21.1",
    "@testcontainers/postgresql": "^10.10.4",
    "@testcontainers/redis": "^10.10.4",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie": "^0.6.0",
    "@types/nodemailer": "^6",
    "@types/pem": "^1.14.4",
    "@types/ua-parser-js": "^0.7.39",
    "@types/web-push": "^3.6.3",
    "@vitest/coverage-v8": "^2.0.4",
    "esbuild": "^0.23.0",
    "npm-run-all2": "^6.2.2",
    "pem": "^1.14.8",
    "prisma": "*",
    "testcontainers": "^10.10.4",
    "vitest": "^2.0.4",
    "wait-on": "^7.2.0"
  },
  "resolutions": {
    "@bull-board/ui": "5.11.0",
    "@prisma/client": "5.17.0",
    "prisma": "5.17.0",
    "bcrypt": "5.1.1"
  }
}
