  "license": "MIT",
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm run \"/^dev:.*/\"",
    "build": "pnpm run \"/^build:.*/\"",
    "build:tsc": "tsgo --build",
    "build:fe": "pnpm fe build:vite",
    "start": "pnpm run \"/^start:.*/\"",
    "start:fe": "pnpm fe preview:vite",
    "start:be": "pnpm be start",
    "start:e2e": "VITE_INTEGRATION_TEST=true pnpm run-p start:be 'fe dev:vite'",
    "clean": "git clean -Xdf --exclude='!packages/backend/.env'",
    "test": "vitest",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint",
    "lint:sherif": "sherif",
    "lint:knip": "knip",
    "lint:format": "prettier . --check",
    "format": "prettier . --write",
    "fe": "pnpm --filter @nihalgonsalves/expenses-frontend --",
    "be": "pnpm --filter @nihalgonsalves/expenses-backend --",
    "e2e": "pnpm --filter @nihalgonsalves/expenses-e2e --",
    "dev:fe": "pnpm fe dev",
    "dev:be": "pnpm be dev",
    "dev:build": "pnpm build:tsc --watch --preserveWatchOutput",
    "validate": "run-p --continue-on-error build 'lint:eslint --fix' 'lint:sherif' 'lint:knip' 'test --no-watch --reporter=dot' 'format --log-level=warn'"
  },
  "devDependencies": {
    "@nihalgonsalves/esconfig": "0.13.2",
    "@tanstack/react-router-devtools": "1.141.4",
    "@tanstack/router-plugin": "1.141.5",
    "@types/node": "24",
    "@typescript/native-preview": "7.0.0-dev.20251217.1",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "eslint": "9.39.2",
    "eslint-plugin-unused-imports": "4.3.0",
    "knip": "5.75.1",
    "lefthook": "2.0.12",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "prettier-plugin-prisma": "5.0.0",
    "prettier-plugin-sql": "0.19.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sherif": "1.9.0",
    "type-fest": "5.3.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "vitest": "4.0.16"
  }
}
