{
  "name": "@nihalgonsalves/expenses",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.1.0+sha256.81a00df816059803e6b5148acf03ce313cad36b7f6e5af6efa040a15981a6ffb",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "run-p --print-label 'dev:*'",
    "build": "run-p 'build:*'",
    "build:tsc": "tsc --build",
    "build:fe": "yarn fe build:vite",
    "build:be": "yarn be build",
    "start": "run-p 'start:*'",
    "start:fe": "yarn fe preview:vite",
    "start:be": "yarn be start",
    "start:e2e": "yarn build:be && yarn run-p start:be 'fe dev:vite'",
    "clean": "git clean -Xdf",
    "test": "vitest",
    "lint": "run-p 'lint:*'",
    "lint:eslint": "eslint --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx ./packages/*",
    "lint:sherif": "sherif",
    "lint:format": "prettier . --check",
    "format": "prettier . --write",
    "fe": "yarn workspace @nihalgonsalves/expenses-frontend",
    "be": "yarn workspace @nihalgonsalves/expenses-backend",
    "e2e": "yarn workspace @nihalgonsalves/expenses-e2e",
    "dev:fe": "yarn fe dev",
    "dev:be": "yarn be dev",
    "dev:build": "yarn build:tsc --watch",
    "validate": "run-p build 'lint:eslint --fix' 'test --no-watch --reporter=dot' 'format --log-level=warn'"
  },
  "devDependencies": {
    "@nihalgonsalves/esconfig": "^0.9.0",
    "@types/node": "20",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "knip": "^5.0.1",
    "lefthook": "^1.6.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sql": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sherif": "^0.8.1",
    "type-fest": "^4.10.3",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
