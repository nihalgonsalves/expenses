    "lefthook": "2.1.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "prettier-plugin-prisma": "5.0.0",
    "prettier-plugin-sql": "0.19.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sherif": "1.10.0",
    "type-fest": "5.4.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vitest": "4.0.18"
  }
