  "packageManager": "pnpm@10.29.2+sha512.bef43fa759d91fd2da4b319a5a0d13ef7a45bb985a3d7342058470f9d2051a3ba8674e629672654686ef9443ad13a82da2beb9eeb3e0221c87b8154fff9d74b8",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm run \"/^dev:.*/\"",
    "build": "pnpm run \"/^build:.*/\"",
    "build:tsc": "tsgo --build",
    "build:fe": "pnpm fe build:vite",
    "start": "pnpm run \"/^start:.*/\"",
    "start:fe": "pnpm fe preview:vite",
    "start:be": "pnpm be start",
    "start:e2e": "VITE_INTEGRATION_TEST=true pnpm run-p start:be 'fe dev:vite'",
    "clean": "git clean -Xdf --exclude='!packages/backend/.env'",
    "test": "vitest",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:oxlint": "oxlint --type-aware --report-unused-disable-directives-severity=error",
    "lint:sherif": "sherif",
    "lint:knip": "knip",
    "lint:format": "prettier . --check",
    "format": "prettier . --write",
    "fe": "pnpm --filter @nihalgonsalves/expenses-frontend --",
    "be": "pnpm --filter @nihalgonsalves/expenses-backend --",
    "e2e": "pnpm --filter @nihalgonsalves/expenses-e2e --",
    "dev:fe": "pnpm fe dev",
    "dev:be": "pnpm be dev",
    "dev:build": "pnpm build:tsc --watch --preserveWatchOutput",
    "validate": "run-p --continue-on-error build 'lint:eslint --fix' 'lint:sherif' 'lint:knip' 'test --no-watch --reporter=dot' 'format --log-level=warn'"
  },
  "devDependencies": {
    "@nihalgonsalves/esconfig": "0.16.0",
    "@types/node": "24",
    "@typescript/native-preview": "7.0.0-dev.20260223.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-storybook": "10.2.12",
    "eslint-plugin-testing-library": "7.16.0",
    "knip": "5.85.0",
    "lefthook": "2.1.1",
    "npm-run-all2": "8.0.4",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "prettier": "3.8.1",
    "prettier-plugin-prisma": "5.0.0",
    "prettier-plugin-sql": "0.19.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sherif": "1.10.0",
    "type-fest": "5.4.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
