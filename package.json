  "scripts": {
    "dev": "run-p --print-label dev:*",
    "build": "tsc --build",
    "clean": "git clean -Xdf",
    "test": "vitest",
    "lint": "eslint --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx ./packages/*",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "fe": "yarn workspace @nihalgonsalves/expenses-frontend",
    "be": "yarn workspace @nihalgonsalves/expenses-backend",
    "e2e": "yarn workspace @nihalgonsalves/expenses-e2e",
    "dev:fe": "yarn fe dev",
    "dev:be": "yarn be dev",
    "dev:build": "yarn build --watch",
    "validate": "run-p build 'lint --fix' 'test --no-watch --reporter=dot' 'format --log-level=warn'"
  },
  "devDependencies": {
    "@nihalgonsalves/esconfig": "^0.6.0",
    "@types/node": "20",
    "@vitest/ui": "^0.33.0",
